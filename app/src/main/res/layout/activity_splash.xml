<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    >

  <EditText
      android:id="@+id/et_pwd"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/input_password"
      android:inputType="textPassword"
      android:paddingLeft="10dp"
      app:layout_constraintBottom_toTopOf="@id/et_confirm_pwd"
      android:layout_marginBottom="10dp"
      />
  <EditText
      android:id="@+id/et_confirm_pwd"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="@string/input_confirm_password"
      android:inputType="textPassword"
      android:paddingLeft="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <Button
      android:id="@+id/btn_generation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="@string/generate_pwd"
      android:textAllCaps="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/et_confirm_pwd"
      />
</android.support.constraint.ConstraintLayout>