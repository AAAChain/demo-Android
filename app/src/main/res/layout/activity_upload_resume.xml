<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <android.support.constraint.ConstraintLayout
      android:id="@+id/cl_layout1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible"
      >
    <include
        layout="@layout/view_title_bar"
        android:id="@+id/layout_title_bar"
        />

    <TextView
        android:id="@+id/tv_resume_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="完整简历上传"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_title_bar"
        />

    <TextView
        android:id="@+id/tv_resume_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="请在简历里面包含姓名、电话等联系信息
这个文件我们将用您的公钥加密存贮，只有您授权，别人才能下载和使用。
您可以收取授权费用，费用AAA结算。"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_resume_title"
        />


    <TextView
        android:id="@+id/tv_resume_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="附件格式应为doc,docx,pdf,jpg,png,大小不超过10M"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_resume_introduction"
        />

    <Button
        android:id="@+id/btn_resume_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/popup_item_text_color"
        android:text="完整简历文件加密上传"
        android:textColor="@color/white_color"
        app:layout_constraintTop_toBottomOf="@id/tv_resume_prompt"
        />

  </android.support.constraint.ConstraintLayout>
  <android.support.constraint.ConstraintLayout
      android:id="@+id/cl_layout2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      >

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="100"
        android:progress="0"
        android:secondaryProgress="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyleHorizontal"
        />
    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress"
        />
    <Button
        android:id="@+id/btn_upload_done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/view_title_bar_bg"
        android:text="完成"
        android:textColor="@color/white_color"
        app:layout_constraintBottom_toBottomOf="parent"
        />
  </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>