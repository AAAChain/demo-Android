<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <android.support.constraint.ConstraintLayout
      android:id="@+id/cl_layout1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible"
      >
    <include
        layout="@layout/view_title_bar"
        android:id="@+id/layout_title_bar"
        />

    <TextView
        android:id="@+id/tv_resume_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/upload_resume"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_title_bar"
        />

    <TextView
        android:id="@+id/tv_resume_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/upload_resume_introduction"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_resume_title"
        />


    <EditText
        android:id="@+id/et_resume_price"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@id/tv_currency_symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resume_introduction"
        />
    <TextView
        android:id="@+id/tv_currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAA"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/et_resume_price"
        app:layout_constraintEnd_toEndOf="@id/btn_resume_upload"
        app:layout_constraintTop_toTopOf="@id/et_resume_price"
        />
    <Button
        android:id="@+id/btn_resume_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/popup_item_text_color"
        android:text="@string/upload_secret_resume"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_tile_size"
        app:layout_constraintTop_toBottomOf="@id/et_resume_price"
        />

    <TextView
        android:id="@+id/tv_resume_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/upload_resume_format"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_resume_upload"
        />

  </android.support.constraint.ConstraintLayout>
  <android.support.constraint.ConstraintLayout
      android:id="@+id/cl_layout2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      >

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyleHorizontal"
        />
    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:text="0%"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress"
        />
    <Button
        android:id="@+id/btn_upload_done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/view_title_bar_bg"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_tile_size"
        app:layout_constraintBottom_toBottomOf="parent"
        />
  </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>