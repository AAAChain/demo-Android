<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:layout_editor_absoluteY="25dp"
    >


  <RelativeLayout
      android:id="@+id/rl_my_account"
      android:layout_width="0dp"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:text="@string/myAccount"
        />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_my_wallet"
      android:layout_width="0dp"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:text="@string/myWallet"
        />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_my_resource_management"
      android:layout_width="0dp"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view2"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:text="@string/myResourceManagement"
        />
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/rl_my_setting"
      android:layout_width="0dp"
      android:layout_height="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view3"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:text="@string/setting"
        />
  </RelativeLayout>
  <View
      android:id="@+id/view"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:background="#cccccc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rl_my_account"
      />
  <View
      android:id="@+id/view2"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:background="#cccccc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rl_my_wallet"
      />
  <View
      android:id="@+id/view3"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:background="#cccccc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rl_my_resource_management"
      />
  <View
      android:id="@+id/view4"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:background="#cccccc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rl_my_setting"
      />
</android.support.constraint.ConstraintLayout>